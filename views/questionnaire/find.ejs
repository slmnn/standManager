  <div class="panel-body">

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input_name"><%= i18n("Name") %></label>  
    <div class="col-md-4">
    <input id="input_name" name="input_name" value="<%= user.firstname ? user.firstname + ' ' +  user.lastname : '' %>" type="text" placeholder="John Doe" class="form-control input-md" required="">
      
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input_tel"><%= i18n("Telephone") %></label>  
    <div class="col-md-4">
    <input id="input_tel" name="input_tel" type="tel" placeholder="123 123 4567" value="<%= user.tel ? user.tel : '' %>" class="form-control input-md" required="">
      
    </div>
  </div>

  <!-- Multiple Radios (inline) -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input_gender"><%= i18n("Gender") %></label>
    <div class="col-md-4"> 
      <label class="radio-inline" for="input_gender-0">
        <input type="radio" name="input_gender" id="input_gender-0" value="male" <% if(user.male){ %>checked="checked" <% } %>>
        <%= i18n("male") %>
      </label> 
      <label class="radio-inline" for="input_gender-1">
        <input type="radio" name="input_gender" id="input_gender-1" value="female" <% if(!user.male){ %>checked="checked" <% } %>>
        <%= i18n("female") %>
      </label>
    </div>
  </div>
  </div>
</div>


